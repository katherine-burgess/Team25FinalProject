<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.WorkoutAppController">
   <children>
      <HBox prefHeight="15.0" prefWidth="200.0">
         <children>
            <Label text="Welcome!">
               <HBox.margin>
                  <Insets left="70.0" right="50.0" top="10.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <HBox prefHeight="0.0" prefWidth="200.0">
         <children>
            <Label fx:id="inspirationQuoteLabel">
               <HBox.margin>
                  <Insets left="70.0" right="50.0" top="10.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="Pick a User:">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <ChoiceBox fx:id="chooseUserChoiceBox" prefHeight="25.0" prefWidth="190.0">
            	<items>
            		<FXCollections fx:factory="observableArrayList">
            			<String fx:value="Add a User" />
            			<String fx:value="Joe" />
            		</FXCollections>
            	</items>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
            </ChoiceBox>
            <Button mnemonicParsing="false" onAction="#chooseUser" text="Enter">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</VBox>


